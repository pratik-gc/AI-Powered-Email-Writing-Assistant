{
    "name": "Email Writer Assistant",
    "description": "AI-Powered Email Writing Assistant",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
        "http://localhost:8080/*",
        "*://mail.google.com/*"
      ],
      "content_scripts": [
        {
          "js": ["content.js"],
          "matches": ["*://mail.google.com/*"],
          "css": ["content.css"],
          "run_at": "document_end" 
        
        }
      ],
      "web_accessible_resources": [
        {
          "resources": [ "icons/*" ],
          "matches": [ "*://mail.google.com/*" ]
        }
      ],
    "action": {
      "default_popup": "welcome.html",
      "default_title": "Email Writer Assistant",
      "default_icon": "ai-email.png"
    }
}